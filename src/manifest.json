{
  "manifest_version": 3,
  "name": "Api Logger Extension",
  "description": "Uses the chrome.debugger API to capture network events on web pages.",
  "version": "1.0",
  "permissions": [
    "debugger",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/ale-16.png",
    "32": "icons/ale-32.png",
    "48": "icons/ale-48.png",
    "128": "icons/ale-128.png"
  }
}